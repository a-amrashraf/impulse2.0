{% if settings.cart_wrapping_enable %}
<script>
(function() {
  'use strict';
  
  const wrappingHandle = {{ settings.cart_wrapping_product_handle | default: 'special-wrapping' | json }};
  
  class GiftWrappingManager {
    constructor() {
      this.wrappingHandle = wrappingHandle;
      this.isUpdating = false;
      this.cartItemState = {}; // Track which items are in cart
      this.activeWrapItems = {}; // Track which items have wrapping checked
    }
    
    init() {
      this.collectCheckboxState();
      this.attachCheckboxListeners();
    }
    
    /**
     * Collect current state of all checkboxes
     * Preserve checked states across cart updates
     */
    collectCheckboxState() {
      const checkboxes = document.querySelectorAll('.wrapping-checkbox[data-item-key]');
      const newCartState = {};
      
      checkboxes.forEach(checkbox => {
        const key = checkbox.dataset.itemKey;
        newCartState[key] = true; // Item exists
        
        // Preserve checked state from previous session
        if (this.activeWrapItems[key]) {
          checkbox.checked = true;
        }
      });
      
      // Detect removed items
      const removedItems = Object.keys(this.cartItemState).filter(
        key => !newCartState[key]
      );
      
      // Cleanup state for removed items
      removedItems.forEach(key => {
        delete this.activeWrapItems[key];
      });
      
      this.cartItemState = newCartState;
      
      // Auto-update wrapping if items were removed
      if (removedItems.length > 0) {
        setTimeout(() => this.updateWrappingFromChecked(), 100);
      }
    }
    
    /**
     * Attach change listeners to all checkboxes
     */
    attachCheckboxListeners() {
      const checkboxes = document.querySelectorAll('.wrapping-checkbox[data-item-key]');
      
      checkboxes.forEach(checkbox => {
        // Remove previous listeners
        const newCheckbox = checkbox.cloneNode(true);
        checkbox.parentNode.replaceChild(newCheckbox, checkbox);
        
        // Attach new listener
        newCheckbox.addEventListener('change', (e) => {
          const key = e.target.dataset.itemKey;
          if (e.target.checked) {
            this.activeWrapItems[key] = true;
          } else {
            delete this.activeWrapItems[key];
          }
          
          this.updateWrappingFromChecked();
        });
      });
    }
    
    /**
     * Calculate total quantity to wrap based on checked items
     * and update cart accordingly
     */
    async updateWrappingFromChecked() {
      if (this.isUpdating) return;
      
      // Calculate total quantity from checked items
      const checkedBoxes = document.querySelectorAll('.wrapping-checkbox[data-item-key]:checked');
      const totalToWrap = Array.from(checkedBoxes).reduce((sum, cb) => {
        return sum + parseInt(cb.dataset.itemQuantity || 1);
      }, 0);
      
      await this.syncWrappingToCart(totalToWrap);
    }
    
    /**
     * Add/update/remove wrapping product in cart
     */
    async syncWrappingToCart(quantity) {
      this.isUpdating = true;
      
      try {
        // Get current cart state
        const cartResponse = await fetch('/cart.js');
        const cart = await cartResponse.json();
        
        const wrappingItem = cart.items.find(item => 
          item.product_handle === this.wrappingHandle
        );
        
        if (quantity > 0) {
          // Need wrapping in cart
          if (wrappingItem) {
            // Update quantity if different
            if (wrappingItem.quantity !== quantity) {
              await this.updateCartItem(wrappingItem.key, quantity);
            }
          } else {
            // Add wrapping product
            await this.addWrappingProduct(quantity);
          }
        } else {
          // Remove wrapping if in cart
          if (wrappingItem) {
            await this.updateCartItem(wrappingItem.key, 0);
          }
        }
        
        // Refresh cart UI
        await this.refreshCartUI();
      } catch (error) {
        console.error('Gift wrapping error:', error);
      } finally {
        this.isUpdating = false;
      }
    }
    
    /**
     * Add wrapping product to cart
     */
    async addWrappingProduct(quantity) {
      try {
        const variantId = await this.getWrappingVariantId();
        
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            items: [{
              id: variantId,
              quantity: quantity,
              properties: {
                '_gift_wrapping': 'true'
              }
            }]
          })
        });
        
        return response.json();
      } catch (error) {
        console.error('Error adding wrapping:', error);
      }
    }
    
    /**
     * Update quantity of item in cart
     */
    async updateCartItem(key, quantity) {
      try {
        const response = await fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: key,
            quantity: quantity
          })
        });
        
        return response.json();
      } catch (error) {
        console.error('Error updating cart:', error);
      }
    }
    
    /**
     * Fetch wrapping product variant ID
     */
    async getWrappingVariantId() {
      try {
        const response = await fetch(`/products/${this.wrappingHandle}.js`);
        const product = await response.json();
        return product.variants[0].id;
      } catch (error) {
        console.error('Error fetching wrapping product:', error);
      }
    }
    
    /**
     * Refresh cart display
     */
    async refreshCartUI() {
      if (typeof theme !== 'undefined' && theme.cart && theme.cart.buildCart) {
        theme.cart.buildCart();
      } else if (window.location.pathname === '/cart') {
        window.location.reload();
      }
    }
  }
  
  // Global instance
  window.giftWrappingManager = null;
  
  function initGiftWrapping() {
    const container = document.querySelector('[data-wrapping-container]');
    if (container) {
      if (!window.giftWrappingManager) {
        window.giftWrappingManager = new GiftWrappingManager();
      }
      window.giftWrappingManager.init();
    }
  }
  
  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initGiftWrapping);
  } else {
    initGiftWrapping();
  }
  
  // Reinitialize after cart updates
  document.addEventListener('cart:updated', () => {
    setTimeout(initGiftWrapping, 100);
  });
  
  // Hook into theme cart system
  if (typeof theme !== 'undefined') {
    if (theme.cart && theme.cart.reInit) {
      const originalReInit = theme.cart.reInit;
      theme.cart.reInit = function() {
        originalReInit.call(this);
        setTimeout(initGiftWrapping, 50);
      };
    }
  } else {
    setTimeout(() => {
      if (theme.cart && theme.cart.reInit) {
        const originalReInit = theme.cart.reInit;
        theme.cart.reInit = function() {
          originalReInit.call(this);
          setTimeout(initGiftWrapping, 50);
        };
      }
    }, 1000);
  }
})();
</script>
{% endif %}

